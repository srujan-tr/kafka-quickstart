{
  "name": "Kafka Development",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup-kafka.sh",
  "postStartCommand": "bash .devcontainer/start-kafka.sh",
  "forwardPorts": [9092],
  "portsAttributes": {
    "9092": {
      "label": "Kafka",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "vscode"
}