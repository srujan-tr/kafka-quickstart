{
  "name": "Kafka Development Environment",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "vscjava.vscode-java-pack"
      ]
    }
  },
  // Installs Kafka 4.1.0 (latest stable) natively in the container
  "postCreateCommand": "bash .devcontainer/setup-kafka.sh",
  "postStartCommand": "bash .devcontainer/start-kafka.sh",
  "forwardPorts": [9092],
  "portsAttributes": {
    "9092": {
      "label": "Kafka Broker",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "vscode"
}